{
  "$schema": "https://opencode.ai/config.json",
  "share": "disabled",
  "instructions": [
    ".config/opencode/rules/core-rules.md",
    ".config/opencode/rules/performance-optimization.md",
    ".config/opencode/rules/prompt-optimize.md",
    ".config/opencode/rules/code-scanner.md",
    "~/.config/opencode/AGENTS.md"
  ],
  "plugin": ["opencode-antigravity-auth@latest", "opencode-agent-memory"],
  "mcp": {
    "notion": {
      "type": "remote",
      "enabled": true,
      "url": "https://mcp.notion.com/mcp"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "snyk": {
      "type": "local",
      "command": ["snyk", "mcp", "-t", "stdio"],
      "enabled": true
    }
  },
  "provider": {
    "google": {
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65535
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": {
              "thinkingLevel": "low"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "minimal": {
              "thinkingLevel": "minimal"
            },
            "low": {
              "thinkingLevel": "low"
            },
            "medium": {
              "thinkingLevel": "medium"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "antigravity-claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 8192
              }
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 32768
              }
            }
          }
        },
        "antigravity-claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 8192
              }
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 32768
              }
            }
          }
        },
        "gemini-2.5-flash": {
          "name": "Gemini 2.5 Flash (Gemini CLI)",
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro (Gemini CLI)",
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-3-flash-preview": {
          "name": "Gemini 3 Flash Preview (Gemini CLI)",
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-3-pro-preview": {
          "name": "Gemini 3 Pro Preview (Gemini CLI)",
          "limit": {
            "context": 1048576,
            "output": 65535
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        }
      }
    }
  },
  "formatter": {
    "prettier": {
      "command": ["npx", "prettier", "--write", "$FILE"],
      "extensions": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx",
        ".json",
        ".jsonc",
        ".yaml",
        ".yml",
        ".css",
        ".scss",
        ".less",
        ".html",
        ".md",
        ".mdx"
      ]
    },
    "eslint": {
      "command": ["npx", "eslint", "--fix", "$FILE"],
      "extensions": [".js", ".jsx", ".ts", ".tsx"]
    },
    "black": {
      "command": ["black", "$FILE"],
      "extensions": [".py"]
    },
    "isort": {
      "command": ["isort", "$FILE"],
      "extensions": [".py"]
    },
    "ruff": {
      "command": ["ruff", "format", "$FILE"],
      "extensions": [".py"]
    },
    "gofmt": {
      "command": ["gofmt", "-w", "$FILE"],
      "extensions": [".go"]
    },
    "goimports": {
      "command": ["goimports", "-w", "$FILE"],
      "extensions": [".go"]
    },
    "rustfmt": {
      "command": ["rustfmt", "$FILE"],
      "extensions": [".rs"]
    },
    "clang-format": {
      "command": ["clang-format", "-i", "$FILE"],
      "extensions": [".c", ".h", ".cpp", ".hpp"]
    },
    "shfmt": {
      "command": ["shfmt", "-w", "$FILE"],
      "extensions": [".sh"]
    },
    "terraform": {
      "command": ["terraform", "fmt", "$FILE"],
      "extensions": [".tf", ".tfvars"]
    },
    "deno": {
      "command": ["deno", "fmt", "$FILE"],
      "extensions": [".ts", ".tsx", ".js", ".jsx", ".md"]
    },
    "sqlfmt": {
      "command": ["sqlfmt", "$FILE"],
      "extensions": [".sql"]
    },
    "yamlfmt": {
      "command": ["yamlfmt", "$FILE"],
      "extensions": [".yaml", ".yml"]
    }
  },
  "lsp": {
    "pyright": {
      "disabled": false,
      "command": ["pyright-langserver", "--stdio"],
      "extensions": [".py"],
      "initialization": {
        "python.analysis.typeCheckingMode": "strict",
        "python.analysis.autoSearchPaths": true,
        "python.analysis.useLibraryCodeForTypes": true
      }
    },
    "typescript": {
      "disabled": false,
      "command": ["typescript-language-server", "--stdio"],
      "extensions": [".ts", ".tsx", ".js", ".jsx"]
    },
    "gopls": {
      "disabled": false,
      "command": ["gopls"],
      "extensions": [".go"]
    },
    "rust-analyzer": {
      "disabled": false,
      "command": ["rust-analyzer"],
      "extensions": [".rs"]
    }
  }
}
